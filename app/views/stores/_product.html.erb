 <br clear="all">
<!-- navigator -->
  <div id="prod_nav">
    <div class="row">
      <%if @products.present?%>
      <% @products.each do |product| %> 
        <div class="col-md-4">
          <div class="title_product">
            <%= product.title.capitalize %>
          </div>
          <div class="image_product">
          <%= image_tag(product.avatar_url, size: "200x100") %>
          </div>
            
              <%= render partial: "products/modal_of_description", locals: {product: product}  %>
        
          <p class="buy_product">

        <%#= button_to 'buy', line_items_path(product_id: product.id),remote: true, class: "btn btn-success" %> 
            </p>
          
          <div class="price">
            Price: <%= product.price %>
          </div> 
 
        </div>
      <% end %>
        <li class="active">
                <a>
             
                    <%#= render_pagination_box(@products) %> 
                 
                </a>
              </li>
      <% end %>
    </div>
  </div>
</div>      